<div class="basic-grey">
  <p id="notice"><%= notice %></p>

  <h1>Phones</h1>

  <table>
    <thead>
      <tr>
        <th>Contact</th>
        <th>Phone</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @phones.each do |phone| %>
        <tr>
          <td><%= phone.contact.name %></td>
          <td><%= phone.phone %></td>
          <td><%= link_to 'Show', phone %></td>
          <td><%= link_to 'Edit', edit_phone_path(phone) %></td>
          <td><%= link_to 'Destroy', phone, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to "Novo", new_phone_path, class: "btn btn-primary" %> | 
  <%= link_to "Home", root_path, class: "btn btn-default" %>
</div>  